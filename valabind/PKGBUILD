# Maintainer: ArchStrike <archstrikelinux@gmail.com>
pkgname=valabind
pkgver=296.1c87219
pkgrel=1
epoch=1
pkgdesc="Tool to parse vala or vapi files to transform them into swig interface files, C++ source files, GIR or GEAR"
arch=('armv6h' 'armv7h' 'i686' 'x86_64')
url="http://hg.youterm.com/valabind"
license=('GPL3')
makedepends=('git')
depends=('vala')
groups=('archstrike')
conflicts=('valabind' 'valabind-hg')
provides=('valabind')
source=('git://github.com/radare/valabind.git')
sha512sums=('SKIP')

pkgver () {
  cd valabind
  echo "$(git rev-list --count master).$(git rev-parse --short master)"
}

build() {
  cd "$srcdir/valabind"
  make
}

package() {
  cd "$srcdir/valabind"
  make "DESTDIR=$pkgdir" install
}
