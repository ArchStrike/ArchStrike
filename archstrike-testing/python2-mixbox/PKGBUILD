# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname=python-mixbox
pkgver=0.0.12
pkgrel=1
pkgdesc="A library of common code leveraged by python-cybox, python-maec, and python-stix"
url="https://github.com/CybOXProject/mixbox"
depends=('python2')
makedepends=('git' 'python2-setuptools')
license=('custom')
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
source=("https://github.com/CybOXProject/mixbox/archive/v${pkgver}.tar.gz")
sha512sums=('5050748d077ecce69729850b22bde4d0cd4b1b46582441d7430c986d5c44e66edb9b3fee598f99c89fee03d8c753979d3b74f597b06242c8c8163bc11748a0d4')

package() {
  cd "${srcdir}/mixbox-${pkgver}"

  install -dm755 "${pkgdir}/usr/bin/"
  install -dm755 "${pkgdir}/usr/share/licenses/${pkgname}"

  python2 setup.py install --root="${pkgdir}" --optimize=1
  install -Dm644 "LICENSE.txt" "${pkgdir}/usr/share/licenses/${pkgname}"
}
