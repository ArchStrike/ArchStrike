# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=dnsbf
pkgver=0.2
pkgrel=1
groups=('archstrike' 'archstrike-scanners')
pkgdesc="search for available domain names in an IP range"
arch=('any')
url='https://github.com/strayArch/dnsbf'
license=('BSD')
makedepends=('subversion')
depends=('python2')
source=('https://raw.githubusercontent.com/strayArch/dnsbf/master/dnsbf.py')
md5sums=('SKIP')

package() {
  cd "$srcdir/trunk"
  install -Dm755 dnsbf.py "$pkgdir/usr/bin/dnsbf"
}
