# Maintainer: ArchStrike <archstrikelinux@gmail.com>

buildarch=212

pkgname=crackle
pkgver=39.3e93196
pkgrel=1
groups=('archstrike' 'archstrike-cracker' 'archstrike-bluetooth')
pkgdesc="Crack and decrypt BLE encryption"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='https://github.com/mikeryan/crackle/'
license=('GPL')
depends=('libpcap')
makedepends=('git')
source=('git+https://github.com/mikeryan/crackle/')
md5sums=('SKIP')

pkgver() {
  cd crackle
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/crackle"
  CPPFLAGS=${CPPFLAGS/-D_FORTIFY_SOURCE=2/}
  make
}

package() {
  cd "$srcdir/crackle"
  install -dm755 "$pkgdir/usr/bin"
  make "INSTALL_DIR=$pkgdir/usr/bin" install
}
