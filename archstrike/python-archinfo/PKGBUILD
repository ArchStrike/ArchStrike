# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname=archinfo
pkgname=python-${_pkgname}
pkgver=8.20.6.8
pkgrel=1
pkgdesc="Classes with architecture-specific information useful to other projects"
url="https://pypi.python.org/pypi/archinfo"
depends=('python' 'python-future')
makedepends=('python-setuptools')
license=('custom')
arch=('any')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('9fb66cf2d062bad2e23a55d8664fa97c33fa024accc29b38160ed4ef747c2b32bda7c51132bf7e7b574e28a780bd3f844022785434481046b9b4ab886e56a28e')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py install --root="${pkgdir}" -O1 --skip-build
    install -Dm644 "LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
