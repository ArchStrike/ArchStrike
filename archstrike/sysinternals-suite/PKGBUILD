# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=sysinternals-suite
pkgver=20220127
pkgrel=1
groups=('archstrike')
pkgdesc="Sysinternals tools suite"
url="http://sysinternals.com"
license=('sysinternals')
arch=('any')
makedepends=('unzip')
source=(http://download.sysinternals.com/files/SysinternalsSuite.zip)
sha512sums=('c04fc93ebe691f40de1b6c8eef750195968775ec1bfb63555baee40b40431fed6f1333256ea049e969f5ed5bf63df9702d38e6a9ae3a28e665224fccf9225183')

package() {
  cd "$srcdir"

  # Base directory.
  install -dm755 "$pkgdir/usr/share/sysinternals-suite"

  find . -type l -exec rm {} \;

  # Transform all files to lowercase
  for f in *; do
    lc=$(echo $f | tr '[A-Z]' '[a-z]')

    if [ ! -f $f -o -f $lc ]; then
      continue
    fi

    mv -i $f $lc
  done

  cp -r * "${pkgdir}/usr/share/sysinternals-suite/"
}
