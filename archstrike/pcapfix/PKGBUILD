buildarch=220

pkgname=pcapfix
pkgver=1.1.5
pkgrel=1
pkgdesc="A repair tool for corrupted pcap files. "
groups=('archstrike' 'archstrike-forensics' 'archstrike-misc' 'archstrike-analysis')
arch=("i686" "x86_64" "armv6h" "armv7h" 'aarch64')
license=("GPL3")
url='http://f00l.de/pcapfix/'
depends=('glibc')
source=("http://f00l.de/pcapfix/${pkgname}-${pkgver}.tar.gz")
sha512sums=('6504af32803a966f16ae7470aeedf04cbcccd7f0503be20204a7bdded2cdc8931d9d57547a65c852d186832f22a2a7bc4003277aa4d31ced9f61dbea1b882bc0')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
