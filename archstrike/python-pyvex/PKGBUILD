# Maintainer: ArchStrike <team@archstrike.org>

buildarch=220

_pkgname=pyvex
pkgname=python-${_pkgname}
pkgver=9.0.6281
pkgrel=1
pkgdesc="A Python interface to libVEX and VEX IR."
url="https://pypi.org/project/pyvex/"
depends=('python-pycparser' 'python-archinfo' 'python-cffi' 'python-future' 'python-bitstring')
makedepends=('python-setuptools')
license=('BSD')
arch=('armv6h' 'armv7h' 'i686' 'x86_64' 'aarch64')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('cb07ba4dacc3a8e636a52951649bca52aca7cbeb387321565c867f903903211f832d47d7da1910880598e51bc267c8f580100a2861d2ab82af0c9d08a1509d5f')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py install --root="${pkgdir}" -O1 --skip-build
    install -Dm644 "LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
