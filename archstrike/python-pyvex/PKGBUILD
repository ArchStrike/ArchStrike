# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname=pyvex
pkgname=python-${_pkgname}
pkgver=8.20.6.1
pkgrel=1
pkgdesc="A Python interface to libVEX and VEX IR."
url="https://pypi.python.org/pypi/pyvex"
depends=('python-pycparser' 'python-archinfo' 'python-cffi' 'python-future' 'python-bitstring')
makedepends=('python-setuptools')
license=('custom')
arch=('any')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('ef896a8e8d5f242df76058ccb622bb5ed4372c00e444402eb0220b556d9fe8bd92eef7940d5ccc0642565a151f823cfaaeb9ebddd7acbf9cd652807739a0c8a5')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py install --root="${pkgdir}" -O1 --skip-build
    install -Dm644 "LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
