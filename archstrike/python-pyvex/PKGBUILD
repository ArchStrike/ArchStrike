# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname=pyvex
pkgname=python-${_pkgname}
pkgver=8.20.6.8
pkgrel=1
pkgdesc="A Python interface to libVEX and VEX IR."
url="https://pypi.python.org/pypi/pyvex"
depends=('python-pycparser' 'python-archinfo' 'python-cffi' 'python-future' 'python-bitstring')
makedepends=('python-setuptools')
license=('custom')
arch=('any')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('a4bd0202d1ea1a28210ebf8220a670c7e05538f78fc78de38c265e2b64f9551118ad7def63a7f21c6334158c3155b1f9c8db7780eed471de9c8a09798f148089')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py install --root="${pkgdir}" -O1 --skip-build
    install -Dm644 "LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
