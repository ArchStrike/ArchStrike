# Maintainer: ArchStrike <team@archstrike.org>
# Contributor: xorond <xorond@gmail.com>

buildarch=220

pkgname="mail-crawl"
pkgver=20160504
pkgrel=3
groups=('archstrike' 'archstrike-recon')
pkgdesc='Tool to harvest emails from website'
url="https://raw.githubusercontent.com/galkan/tools/master/${pkgname}/"
license=('custom')
depends=('python2')
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
source=("https://raw.githubusercontent.com/galkan/tools/master/${pkgname}/${pkgname}.py"
        "https://raw.githubusercontent.com/galkan/tools/master/${pkgname}/LICENSE.txt")
sha512sums=('9160da909dc584a4efe19bd787080802b5cdbe606767042c94f85c506ef2e281304feee7792918a930c258bd02ba9444aa14359263c11c0052e540c89640c970'
            '38f659b5c3eea636e8ed819fa9ebf10b5590c469ca5ab8bf0a3462d57d438fa2f65647a70f21b6b00531f82f82d228d50271d23325d780dd3a525edeaf5b39d3')

prepare() {
  cd "${srcdir}"
  sed -i 's|python|python2|g' ${pkgname}.py
}

package() {
  cd "${srcdir}"

  install -Dm755 "${pkgname}.py" "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt"
}
