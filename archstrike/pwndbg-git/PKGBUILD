# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=pwndbg-git
pkgver=20161019.r470
pkgrel=1
groups=('archstrike' 'archstrike-decompile')
pkgdesc="A collection of python that makes debugging with gdb suck less"
arch=('any')
url='https://github.com/pwndbg/pwndbg'
license=('MIT')
depends=('python-future' 'python-pycparser' 'python-psutil' 'python-ptrace' 'python-pyelftools' 'python-isort' 'python-six' 'python-capstone' 'unicorn')
makedepends=('git')
provides=('pwndbg')
replaces=('pwndbg')
install="${pkgname}.install"
source=("${pkgname}::git+https://github.com/pwndbg/pwndbg.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname
  printf "%s.r%s" "$(git show -s --format=%ci master | sed 's/\ .*//g;s/-//g')" "$(git rev-list --count HEAD)"
}

prepare() {
  cd ${pkgname}
  sed '/0L/d' -i ida_script.py
}

build() {
  cd ${pkgname}
  python -m compileall .
  python -O -m compileall .
}

package() {
  cd $pkgname
  install -dm755 "$pkgdir/usr/share/licenses/$pkgname"
  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -Dm644 LICENSE.md "$pkgdir/usr/share/licenses/$pkgname/"
  cp -a --no-preserve=ownership *.py pwndbg __pycache__ "$pkgdir/usr/share/$pkgname/"
}
