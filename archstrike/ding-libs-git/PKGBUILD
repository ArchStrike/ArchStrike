# Maintainer: ArchStrike <team@archstrike.org>
# Contributor: Mantas M. <grawity@gmail.com>

buildarch=200

pkgname=ding-libs-git
pkgver=0.6.0
pkgrel=1
pkgdesc="'D is not GLib' utility libraries"
arch=('i686' 'x86_64' 'aarch64')
url="https://git.fedorahosted.org/git/ding-libs.git"
license=('GPL3')
depends=('glibc')
makedepends=('doxygen' 'git')
provides=('ding-libs')
conflicts=('ding-libs')
replaces=('ding-libs')
install=${pkgname}.install
source=("git://git.fedorahosted.org/ding-libs.git")
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/ding-libs"
  git describe | sed 's/^ding_libs-//; s/-/./g; s/_/./g'
}

build() {
  cd "$srcdir/ding-libs"
  autoreconf -i -f
  ./configure \
    --prefix=/usr
  make
}

package() {
  cd "$srcdir/ding-libs"
  make DESTDIR="$pkgdir" install
}

# vim: ts=2:sw=2:et
