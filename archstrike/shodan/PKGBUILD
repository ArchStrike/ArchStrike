buildarch=212

pkgname=shodan
pkgver=1.4.1
pkgrel=1
groups=('archstrike' 'archstrike-recon')
pkgdesc='A Python2 library for Shodan.io'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='http://github.com/achillean/shodan-python'
depends=('python2-click' 'python2-colorama' 'python2-requests' 'python2-simplejson')
license=('MIT')
arch=('any')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/source/s/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('b1f281ea1fd48d00ad2433343be01aec')
sha512sums=('10fcff237f9c0b20e78f14d18f0d07b3c8419bac69e108e86f741678c726e1026dff2abcab7120356697a53373d2d553775e4b2c1f048436cf5d15220412b5b3')

build() {
  cd $pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1
  install -Dm0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
