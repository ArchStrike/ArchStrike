# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname="neo4j"
pkgname="python-${_pkgname}"
pkgver=4.0.2
pkgrel=1
pkgdesc="Neo4j Bolt Driver for Python"
url="https://pypi.org/project/neo4j/"
license=('APACHE')
arch=('any')
depends=('python' 'python-pytz')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('d5a179a2e8e4cf630c192b3077dd65b737987991ac85994561772b7bcbf059afe4a3dbb1c47cf30fc12f71c12be9f438ee60ba98768937af214a6f06def03553')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --prefix=/usr --root="${pkgdir}" -O1
}
