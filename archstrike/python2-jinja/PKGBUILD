# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname="Jinja2"
pkgname="python2-jinja"
pkgver=2.11.3
pkgrel=1
pkgdesc="A simple python2ic template language written in python2"
arch=('any')
url="https://palletsprojects.com/p/jinja/"
license=('BSD')
depends=('python2-setuptools' 'python2-markupsafe')
optdepends=('python2-babel: for i18n support')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('fce4f835795fe9afb622f8106f60344032a811f3f693806f31ba482f9b7c1400f93dfa1701b4db0b472cbed4b0793cb329778c8091811ef0e3b577150d28e004')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  export pythonHASHSEED=0
  python2 setup.py build
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  export pythonHASHSEED=0
  python2 setup.py install --root="${pkgdir}" -O1 --skip-build
  install -Dm644 LICENSE.rst -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
