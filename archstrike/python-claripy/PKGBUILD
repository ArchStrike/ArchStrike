# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname=claripy
pkgname=python-${_pkgname}
pkgver=9.0.4378
pkgrel=1
pkgdesc="An abstraction layer for constraint solvers"
url="https://pypi.org/project/claripy/"
depends=('python' 'python-ana' 'python-z3' 'python-future' 'python-cachetools')
makedepends=('python-setuptools')
license=('BSD')
arch=('any')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('e7375adc738247bcfa1e9d43c7ef5452fc1183c14193ff74359cbdde139d5ba1c47853b2187b1ae1cf3f4164dfa1812d8cdbc42c89edcc26c2d05db1a65b0328')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py install --root="${pkgdir}" -O1 --skip-build
    install -Dm644 "LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
