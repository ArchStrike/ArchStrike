# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname=claripy
pkgname=python-${_pkgname}
pkgver=8.20.6.1
pkgrel=2
pkgdesc="An abstraction layer for constraint solvers"
url="https://github.com/angr/claripy"
depends=('python' 'python-ana' 'python-z3' 'python-future' 'python-cachetools')
makedepends=('python-setuptools')
license=('custom')
arch=('any')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('feccc8eac935cc09719420de229c3e6dce2163ba8e29dc8634bb43d26aaf422c6829316f0998f0701676446abb170e6b9f60e976dcb81868368de761211e8d91')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py install --root="${pkgdir}" -O1 --skip-build
    install -Dm644 "LICENSE" ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
