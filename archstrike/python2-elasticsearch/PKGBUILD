# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname=elasticsearch-py
pkgname=python2-elasticsearch
pkgver=7.8.1
pkgrel=1
arch=('any')
pkgdesc='Official Python low-level client for Elasticsearch'
url='https://github.com/elastic/elasticsearch-py'
license=('Apache')
depends=('python2-urllib3' 'python2-certifi' 'elasticsearch')
makedepends=('python2-setuptools')
source=("${url}/archive/${pkgver}.tar.gz")
sha512sums=('46f4295bca0da9b1fb4e8dea6ef511e4f37c342394e24c36712f63e3c75bc76c60f37a81350b7873465e129a635cbf70dd7039daae13e851cfbcc995f91bd432')

build() {
  cd "${srcdir}/elasticsearch-py-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${srcdir}/elasticsearch-py-${pkgver}"
  python2 setup.py install --root "${pkgdir}" -O1 --skip-build
}
