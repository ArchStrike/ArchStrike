# Maintainer: ArchStrike <team@archstrike.org>

buildarch=192

_pkgname="elasticsearch-py"
pkgname="python2-${_pkgname}"
pkgver=7.11.0
pkgrel=2
arch=('x86_64' 'i686')
pkgdesc='Official Python low-level client for Elasticsearch'
url="https://github.com/elastic/${_pkgname}"
license=('Apache')
depends=('python2-urllib3' 'python2-certifi' 'elasticsearch')
makedepends=('python2-setuptools')
replaces=('python2-elasticsearch')
source=("${url}/archive/v${pkgver}.tar.gz")
sha512sums=('39763a6cc884b03787e0afe92e70a358ece936f18fb123c2a7ae42b60408f6f2b2e99932c0162721d3ea5c95a021f3c2346dc67b7c39115773155fef9fbd67d4')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py install --root "${pkgdir}" -O1 --skip-build
}
