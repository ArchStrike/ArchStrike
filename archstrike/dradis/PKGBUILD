# Maintainer: ArchStrike <team@archstrike.org>

buildarch=128

pkgname=dradis
pkgver=3.17.1
pkgrel=1
pkgdesc="An open source framework to enable effective information sharing."
groups=('archstrike' 'archstrike-misc')
url="http://dradisframework.org/"
license=('GPL')
depends=('ruby' 'redis')
arch=('x86_64')
options=(!strip)
source=("https://github.com/dradis/dradis-ce/archive/v${pkgver}.tar.gz")
sha512sums=('9957ab3921f409eff477bc1b7f2e97983ec5ec8527e1cd319998c8d628cff7163a5b72c62febd609671ff3bc818bb38771948b47d8290710e4cd622a1c767667')

package() {

  cd "${srcdir}/${pkgname}-ce-${pkgver}"
  install -dm755 "${pkgdir}/usr/bin"
  install -dm755 "${pkgdir}/usr/share/${pkgname}"

  cp -a --no-preserve=ownership ./* "${pkgdir}/usr/share/${pkgname}"

  cd "${pkgdir}/usr/bin"

  # Joint scripts.
  cat > dradis-webapp << EOF
#!/bin/sh
cd "/usr/share/${pkgname}"
./dradis-webapp "\$@"
EOF

  cat > dradis-worker << EOF
#!/bin/sh
cd "/usr/share/${pkgname}"
./dradis-worker "\$@"
EOF

  chmod 755 dradis-webapp dradis-worker
}
