# Maintainer
pkgname=ruby1.9-http_configuration
_gemname=http_configuration
pkgver=1.0.4
pkgrel=2
pkgdesc="Gem that provides the ability to set defaults for proxies and timeouts for Net::HTTP."
arch=('any')
license=('')
makedepends=('ruby1.9')
url='http://github.com/bdurand/http_configuration'
source=("http://rubygems.org/downloads/http_configuration-$pkgver.gem")
sha512sums=('184f59ca9d6f2556f61cb6033181583bf94c71258ababcaee2be9073a329179a6b63c8acefe543a9e8496816420fa3d048df9e1f0088d9d62bfa59dd45f3ba3e')
noextract=("http_configuration-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby-1.9 -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem-1.9 install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" http_configuration-$pkgver.gem
  else
    gem-1.9 install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" http_configuration-$pkgver.gem
  fi
}
